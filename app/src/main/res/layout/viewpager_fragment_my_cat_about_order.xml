<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/fragment_order_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_order_empty"
        />
    <TextView
        android:id="@+id/fragment_order_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您还没有相关的订单"/>
    <TextView
        android:id="@+id/fragment_order_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可以去看看有哪些想买的"/>
    <Button
        android:id="@+id/fragment_order_bt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#FFFF0040"
        android:layout_marginTop="10dp"
        android:text="随便逛逛"
        android:onClick="clicked"
        android:textColor="#ffffff"/>

</LinearLayout>
