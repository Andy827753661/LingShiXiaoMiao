<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/xiangqing_back_id"
                android:layout_width="20dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back_btn_selector"
                android:clickable="true" />

            <TextView
                android:id="@+id/xiangqing_xiangqing_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="宝贝详情"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/xiangqing_share_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@drawable/share_btn_selector" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <WebView
        android:id="@+id/xiangqing_webview_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></WebView>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/xiangqing_gouwuche_id"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_cart_selector"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_centerVertical="true"
                android:id="@+id/xiangqing_jiaru_id"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:background="@mipmap/bg_btn_add_cart_normal"
                android:text="加入购物车"
                android:textSize="19sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>