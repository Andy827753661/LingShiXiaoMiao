<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/zhuanti_list_item_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/ic_cat_collection_noting"

        />

    <TextView
        android:id="@+id/zhuanti_list_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#ded4d4"
        android:text="sdkan"
        android:textColor="#ffffff"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:background="#e6bebe">

        <ImageView
            android:id="@+id/zhuanti_list_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:src="@mipmap/icon_like_mine" />

        <TextView
            android:id="@+id/zhuanti_list_item_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhuanti_list_item_like"
            android:paddingLeft="6dp"
            android:text="100" />
    </RelativeLayout>
</FrameLayout>