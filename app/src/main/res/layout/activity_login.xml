<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lingshimall.lingshixiaomiao.activitys.LoginActivity">

    <LinearLayout
        android:id="@+id/login_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/login_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_feedback_logo"/>
        <EditText
            android:id="@+id/login_phonenum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入11位手机号"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入6-11位数字英文密码"/>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="登录"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:background="#FFFF0040"/>

    </LinearLayout>

<TextView
    android:id="@+id/login_tv_zhuce"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="还没有账号?"
    android:layout_below="@id/login_linearlayout"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/login_bt_phone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#FFFF0040"
        android:text="手机号注册"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/login_tv_zhuce"
        android:layout_alignBaseline="@id/login_tv_zhuce"/>


<View
    android:id="@+id/login_view_1"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#FFB3B1B2"
    android:layout_below="@id/login_tv_zhuce"
    android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/login_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点三方登录"
        android:layout_below="@id/login_view_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/login_tv_login"
        android:layout_marginTop="40dp"
        >
        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_qq_normal"/>
        <ImageView
            android:id="@+id/login_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_wx_normal"/>
        <ImageView
            android:id="@+id/login_wb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_wb_normal"/>

    </LinearLayout>






</RelativeLayout>
