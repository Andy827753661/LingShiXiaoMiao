<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp">
    <FrameLayout
        android:id="@+id/list_frameLayout_id"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/list_picture_id"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/list_discount_id"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:background="@mipmap/discount_bg_lable"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="3.8折"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:alpha="0.85"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/list_name_id"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="测试文本\n测试文本"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignTop="@id/fragment"
        android:layout_toRightOf="@+id/list_frameLayout_id" />
    <TextView
        android:id="@+id/list_time_id"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:text="3天22小时38分55秒"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/list_frameLayout_id"
        android:layout_below="@+id/list_name_id"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"
        />
        
        <TextView
            android:id="@+id/list_price_id"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:text="￥ 11.11"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:layout_above="@+id/list_percent_id"
            android:layout_toRightOf="@+id/list_frameLayout_id"
            android:layout_toEndOf="@+id/list_frameLayout_id" />
    
        <TextView
            android:id="@+id/list_jianyishoujia_id"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@mipmap/bg_cart_hua"
            android:text="12.58"
            android:textSize="13sp"
            android:layout_above="@+id/list_progress_id"
            android:layout_toRightOf="@+id/list_price_id"
            android:layout_toEndOf="@+id/list_price_id"
            android:layout_marginLeft="5dp"
            />

    <TextView
        android:id="@+id/list_percent_id"
        android:layout_width="55dp"
        android:layout_height="16dp"
        android:text="已抢78%"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_alignBottom="@+id/list_frameLayout_id"
        android:layout_toRightOf="@+id/list_frameLayout_id"
        android:layout_toEndOf="@+id/list_frameLayout_id" />
    <ProgressBar
        android:id="@+id/list_progress_id"
        android:layout_width="100dp"
        android:layout_height="10dp"
        style="@style/custom_ProgressBar_Horizontal"
        android:progress="78"
        android:layout_alignTop="@+id/list_percent_id"
        android:layout_toRightOf="@+id/list_percent_id"
        android:layout_toEndOf="@+id/list_percent_id"
        android:layout_marginTop="4dp"
        />

        <TextView
            android:id="@+id/list_addcar_id"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@mipmap/bg_btn_add_cart_normal"
            android:text="加入购物车"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/list_yiqiang_id"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:gravity="center"
        android:text="已抢1234件"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/list_frameLayout_id"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>