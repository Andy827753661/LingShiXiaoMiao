<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lingshimall.lingshixiaomiao.activitys.MyCatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@mipmap/bg_user">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">
            <RadioGroup
                android:id="@+id/main_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/main_radiobutton_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@mipmap/icon_pay_big"
                    android:gravity="center_horizontal|bottom"
                    android:text="代付款"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/main_radiobutton_sale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/icon_delivery"
                    android:gravity="center_horizontal|bottom"
                    android:text="待发货"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/main_radiobutton_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/icon_logistics"
                    android:gravity="center_horizontal|bottom"
                    android:text="待收货"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/main_radiobutton_mine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/icon_evaluate"
                    android:gravity="center_horizontal|bottom"
                    android:text="待评价"
                    android:textSize="15sp" />
            </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_order"
                android:text="我的订单"
                android:textSize="15sp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
