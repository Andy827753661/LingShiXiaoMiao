<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/list_frameLayout_id"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/list_picture_id"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/list_discount_id"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:background="@mipmap/discount_bg_lable"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="3.8折"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:alpha="0.85" />
    </FrameLayout>

    <TextView
        android:id="@+id/list_name_id"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="测试文本\n测试文本"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignTop="@id/fragment"
        android:layout_toRightOf="@+id/list_frameLayout_id" />


    <TextView
        android:id="@+id/list_price_id"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:text="￥ 11.11"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/list_kaiqiangshijian_id"
        android:layout_toRightOf="@+id/list_frameLayout_id"
        android:layout_toEndOf="@+id/list_frameLayout_id"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/list_jianyishoujia_id"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@mipmap/bg_cart_hua"
        android:text="12.58"
        android:textSize="13sp"
        android:layout_alignTop="@+id/list_price_id"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/list_kaiqiangshijian_id"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="明日 10：00 准时开抢"
        android:textColor="@android:color/holo_green_light"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_alignBottom="@+id/list_frameLayout_id"
        android:layout_toRightOf="@+id/list_frameLayout_id"
        android:layout_toEndOf="@+id/list_frameLayout_id" />


    <TextView
        android:id="@+id/list_jijiangkaishi_id"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@mipmap/bg_btn_jsks"
        android:text="即将开始"
        android:alpha="0.6"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>